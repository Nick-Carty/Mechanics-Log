<div class="login-box">
  <div class="row collapse expanded">
    <div class="small-12 medium-12 column small-order-2">
      <div class="login-box-form-section">
        <h2 class="login-box-title">Edit Account Information</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label :first_name, 'First name' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "login-box-input"%>

          <%= f.label :last_name, 'Last name' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: "login-box-input"%>

          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-box-input" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "login-box-input" %>

          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-box-input" %>

          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "login-box-input" %>

          <%= f.file_field :profile_photo %>

          <%= f.submit "Update", class: "login-box-submit-button" %>
        <% end %>
      </div>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
